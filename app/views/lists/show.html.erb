<div class="container-fluid">
<div>
<h1> <%= @list.name %></h1>
</div>
  <div class="card" style="width: 18rem;">
    <% @list.movies.each do |movie| %>
  <div class="w-200px">
    <%= image_tag movie.poster_url %>
  </div>
  <div class="card-text">
<%= movie.title %>
<%= movie.overview %>
<% movie.rating %>
<% end %>
  </div>
</div>

<div class="p-3">
<%= link_to "back to list", lists_path(@list), class: "btn btn-primary" %>
<%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
</div>
</div>
